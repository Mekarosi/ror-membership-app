<div class="container">
	<div class="row">
		<div class="col-md-6">
			<h1 class="text-center">DevMatch Community</h1>
			<p class="text-center" style="font-weight: bold; font-size: 500; ">Welcome to DevMatch community! Users must fill out a profile in order to be visible in the community.</p>
			<ul class="list-unstyled">
				<% @users.each do |user| %>
				   <% if user.profile %>
				       <li class=" <%= cycle('blue-bg', '')  %>" style="margin-bottom: 20px; text-align: center; ">
				           <div class="card p-5">
					           	<div class="col-sm-4 text-center">
					           		<% if user.profile.avatar %>
					           		    <%= link_to user do %>
					           		     <%= image_tag user.profile.avatar, style: "border-radius: 50% ;" %>
					           		    <% end %>
					           		<% end %>	
					           	</div>
					           	<div>
					           		<%= link_to user do %>
					           		<h2><%= user.profile.first_name %> <%= user.profile.last_name %></h2>
					           		<% end %>
					           		<p>
					           			<%= user.profile.job_title %>
					           		    <% if user.plan_id == 2 %>
                                            <span class="badge badge-danger">PRO</span>    
					           		    <% else %>
					           		    
                                            <span class="badge badge-warning">BASIC</span>
                                        <% end %>		
					           		</p>
					           	</div>
				           </div>
				       </li>
				   <% end%>
				<% end %>
			</ul>
		</div>
	</div>
</div>