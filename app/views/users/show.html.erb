<div class="container" style="margin-top: 20px;">
   <div class="row">
      <div class="col-md-3 text-center">
         <%= image_tag @user.profile.avatar if @user.profile.avatar.attached? %>
      </div>
      <div class="col-md-6">
         <h1><%= @user.profile.first_name %> <%= @user.profile.last_name %></h1>
         <h3>
            <span 
               style="display: inline-block; 
                      width: 35px; 
                      height: 35px; 
                      border: 2px solid #2E6DA4; 
                      border-radius: 4PX; 
                      background-color: #337ab7; 
                      color: white; 
                      text-align: center;
                      margin-right: 5px;">
            <%= job_title_icon %>
                      
            </span><%= @user.profile.job_title %>
         </h3>

         
         <div  style="width: auto;
                      height: auto;
                      border: 1px solid gainsboro;
                      background-color: #5CB85C;
                      color: white;
                      border-radius: 8px;
                      padding: 10px;"


         >
            <h3>Description</h3>
            <%= @user.profile.description %> 
         </div>
         
         <% if current_user.plan_id == 2  %>
         
         <div style="width: auto;
                      height: auto;
                      border: 1px solid gainsboro;
                      background-color: #5BC0DE;
                      color: white;
                      border-radius: 8px;
                      padding: 10px; text-align: ;
                      margin-top: 20px;"

         >
             <h3>Contact Information</h3>
              <%= @user.profile.phone_number %> <br/>
              <%= @user.profile.contact_email %>      
         </div>    
         <% end %>
         
      </div>
   </div>  
</div>

  